<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Interactivetest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#0046cb</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline2.Bold" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Interactivetest.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Interactivetest.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Interactivetest.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.Interactivetest.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Interactivetest.Body1.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Interactivetest.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Interactivetest.Body2.Bold" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Theme.Interactivetest.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.Interactivetest.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/primary</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.Interactivetest.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <style name="TextAppearance.Interactivetest.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Interactivetest.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.Interactivetest.FeatureName">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Theme.Interactivetest.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey_200</item>
    </style>

    <style name="Theme.Interactivetest.TextInput" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="backgroundColor">@color/grey_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Interactivetest.BottomSheet">
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="Theme.Interactivetest.AppBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Interactivetest.BottomSheetDragger" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cardBackgroundColor">@color/grey_400</item>
        <item name="cardElevation">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Theme.Interactivetest.CardView.Feature" parent="Widget.MaterialComponents.CardView">
        <item name="android:focusable">true</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.Interactivetest.TextInputLayout.White" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.Interactivetest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Interactivetest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Interactivetest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Interactivetest.BottomNav">
        <item name="android:background">@color/grey_200</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Theme.Interactivetest.BottomNav.Active">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">8sp</item>
    </style>
</resources>